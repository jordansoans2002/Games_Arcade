<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="360" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproject_1b.CowBull">

    <opaqueInsets>
        <Insets />
    </opaqueInsets>

    <TextField fx:id="enterGuesses" layoutX="15.0" layoutY="13.0" onKeyTyped="#submit" prefHeight="39.0" prefWidth="120.0" promptText="guess" />
    <Label layoutX="163.0" layoutY="20.0" text="Cows" textFill="GREEN" />
    <Label layoutX="222.0" layoutY="20.0" text="Bulls" textFill="RED" />

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="15.0" layoutY="58.0" prefHeight="310.0" prefWidth="270.0" vbarPolicy="NEVER">
        <padding>
            <Insets top="5.0" />
        </padding>

        <content>
            <GridPane fx:id="allGuesses" alignment="CENTER" hgap="39.0" vgap="7.0">
                <padding><Insets top="3.0" /></padding>
            </GridPane>
        </content>

    </ScrollPane>

</AnchorPane>

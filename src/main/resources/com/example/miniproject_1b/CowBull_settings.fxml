            <Button fx:id="letters4" onAction="#setLetters4" prefHeight="30.0" prefWidth="30.0" />
            <Button fx:id="letters5" onAction="#setLetters5" prefHeight="30.0" prefWidth="30.0" />
      </HBox>
      <Button fx:id="playButton" layoutX="274.0" layoutY="313.0" onAction="#changeScene" text="Play">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>

    <StackPane prefHeight="113.0" prefWidth="302.0">
        <ImageView fx:id="five_hand" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@5.png" />
         </image></ImageView>

        <ImageView fx:id="fist" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproject_1b.HandCricket_settings">
    <children>
        <Label layoutX="132.0" layoutY="43.0" text="No. of Overs">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font></Label>
        <HBox alignment="CENTER" layoutX="278.0" layoutY="36.0" prefHeight="40.0" spacing="5">
            <Button fx:id="overs3" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#setOvers3" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE; -fx-border-radius: 4;" text="3" HBox.hgrow="NEVER">
                <font>
                    <Font name="Comic Sans MS Bold" size="15.0" />
                </font></Button>
            <Button fx:id="overs5" onAction="#setOvers5" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE; -fx-border-radius: 4;" text="5" HBox.hgrow="NEVER">
                <font>
                    <Font name="Comic Sans MS Bold" size="15.0" />
                </font></Button>
            <Button fx:id="overs10" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#setOvers10" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE;" text="10" HBox.hgrow="NEVER">
                <font>
                    <Font name="Comic Sans MS Bold" size="15.0" />
                </font></Button>
            <Button fx:id="oversU" alignment="CENTER" onAction="#setOversU" prefHeight="37.0" prefWidth="37.0" style="-fx-background-color: ORANGE;" text="00" HBox.hgrow="NEVER">
                <font>
                    <Font name="Comic Sans MS Bold" size="15.0" />
                </font></Button>
        </HBox>
        <Label layoutX="149.0" layoutY="100.0" text="Difficulty">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font></Label>
        <HBox alignment="CENTER" layoutX="301.0" layoutY="93.0" prefHeight="40.0" spacing="5">
            <Button fx:id="easy" onAction="#setEasy" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: GREEN; -fx-border-radius: 4; -fx-background-radius: 4;" />
            <Button fx:id="medium" onAction="#setMedium" prefHeight="37.0" prefWidth="37.0" style="-fx-background-color: ORANGE; -fx-border-radius: 4;" />
            <Button fx:id="hard" alignment="CENTER" onAction="#setHard" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: RED; -fx-border-radius: 4;" />
        </HBox>
        <Button fx:id="playButton" defaultButton="true" layoutX="271.0" layoutY="334.0" onAction="#startGame" text="Play">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font>
        </Button>
        <Button layoutX="54.0" layoutY="282.0" mnemonicParsing="false" onAction="#setServer" text="Start a Server">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font></Button>
        <Label fx:id="ipAddress" layoutX="53.0" layoutY="289.0" minWidth="149.0" visible="false">
            <font>
                <Font name="Comic Sans MS" size="12.0" />
            </font>
        </Label>
        <Button layoutX="393.0" layoutY="282.0" minWidth="157.0" mnemonicParsing="false" onAction="#setClient" text="Join a server">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font></Button>
        <TextField fx:id="serverIP" layoutX="397.0" layoutY="288.0" visible="false" />
        <Button layoutX="230.0" layoutY="282.0" onAction="#setSinglePC" text="Play single PC">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0" />
            </font>
        </Button>
      <Label layoutX="123.0" layoutY="156.0" text="No. of Wickets">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="279.0" layoutY="149.0" prefHeight="40.0" spacing="5">
         <children>
            <Button fx:id="wickets1" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#setWickets1" prefHeight="37.0" prefWidth="37.0" style="-fx-background-color: ORANGE; -fx-border-radius: 4;" text="1" HBox.hgrow="NEVER">
               <font>
                  <Font name="Comic Sans MS Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="wickets3" onAction="#setWickets3" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE; -fx-border-radius: 4;" text="3" HBox.hgrow="NEVER">
               <font>
                  <Font name="Comic Sans MS Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="wickets5" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#setWickets5" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE;" text="5" HBox.hgrow="NEVER">
               <font>
                  <Font name="Comic Sans MS Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="wickets10" alignment="CENTER" onAction="#setWickets10" prefHeight="33.0" prefWidth="33.0" style="-fx-background-color: ORANGE;" text="10" HBox.hgrow="NEVER">
               <font>
                  <Font name="Comic Sans MS Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
</AnchorPane>
